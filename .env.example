# Application
APP_NAME=open-skills
APP_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# Database (REQUIRED)
# Note: Must use asyncpg driver (postgresql+asyncpg://)
POSTGRES_URL=postgresql+asyncpg://postgres:password@localhost:5432/openskills
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# OpenAI (REQUIRED for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536

# Security (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-jwt-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# Storage
STORAGE_ROOT=./storage
ARTIFACTS_ROOT=./artifacts

# S3 (Optional - stubbed for now)
S3_ENDPOINT=
S3_BUCKET=open-skills-artifacts
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1

# Telemetry - Langfuse (Optional - stubbed)
LANGFUSE_ENABLED=false
LANGFUSE_API_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# Execution Limits
DEFAULT_TIMEOUT_SECONDS=60
MAX_TIMEOUT_SECONDS=300
MAX_INPUT_SIZE_BYTES=10485760     # 10MB
MAX_ARTIFACT_SIZE_BYTES=104857600 # 100MB
MAX_ARTIFACTS_PER_RUN=20

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
